[Unit]
Description=Multi-Agent Trading System API
After=network.target docker.service postgresql.service
Requires=docker.service

[Service]
Type=simple
User=hasancelik
WorkingDirectory=/Users/hasancelik/projects/multi-ai-agent-trading
Environment="PATH=/Users/hasancelik/projects/multi-ai-agent-trading/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/Users/hasancelik/projects/multi-ai-agent-trading/venv/bin/uvicorn api.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10
StandardOutput=append:/Users/hasancelik/projects/multi-ai-agent-trading/logs/api.log
StandardError=append:/Users/hasancelik/projects/multi-ai-agent-trading/logs/api.log

[Install]
WantedBy=multi-user.target
